<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wildlife Watch - Count Management</title>
    <link rel="stylesheet" href="/count/count.css">
    <link rel="stylesheet" href="/styles.css">
    <!-- jsPDF -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.0/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
</head>

<body>
    <div>
        <header class="header fixed-top">
            <div class="container">
                <h1 class="logo">Wildlife Watch</h1>
                <nav>
                    <ul>
                        <li><a href="/welcome_admin.html">Home</a></li>
                        <li><a href="/account.html">Account</a></li>
                    </ul>
                </nav>
            </div>
        </header>
        <div class="transparent-div">
            <a href="count.html">Data handling</a>
            <a href="/reports_list.html">View Sightings</a>
            <a href="/rec/rec.html"> Animal Recognition</a>
        </div>
        <div class="container-animal">
            <h1 style="margin: 10px;">Animal Count Management</h1>
            <form action="/add-animals" id="animalForm" method="POST" novalidate>
                <div class="form-group">
                    <label for="animalName">Animal Name:</label>
                    <input type="text" id="animalName" name="animalName" required>
                </div>
                <div class="form-group">
                    <label for="species">Species:</label>
                    <input type="text" id="species" name="species" required>
                </div>
                <div class="form-group">
                    <label for="count">Count:</label>
                    <input type="number" id="count" name="count" required>
                </div>
                <button type="submit" class="button" id="submit">Add Animal</button>
            </form>
            <div class="pdf">
                <h2>Animal Count Table</h2>
                <table id="animalTable">
                    <thead>
                        <tr>
                            <th>Animal Name</th>
                            <th>Species</th>
                            <th>Count</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% animals.forEach(animal=> { %>
                            <tr data-id="<%= animal._id %>">
                                <td>
                                    <%= animal.animalName %>
                                </td>
                                <td>
                                    <%= animal.species %>
                                </td>
                                <td>
                                    <%= animal.count %>
                                </td>
                                <td>
                                    <button class="edit">Edit</button>
                                </td>
                                <td>
                                    <button class="delete">Delete</button>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <button id="generatePDF" class="pdfButton">Generate PDF</button>
        <footer class="footer">
            <div class="container">
                <p>&copy; 2024 Wildlife Watch. All rights reserved.</p>
            </div>
        </footer>
        <script src="/count/count.js"></script>
</body>

</html>